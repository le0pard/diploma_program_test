<h1>Страницы (<%=link_to "сортировка", sort_admin_page_path() %>)</h1>
<table class="admin">
	<tr>
		<th>Id</th>
		<th>Название</th>
		<th>Видимая?</th>
		<th>В меню?</th>
		<th></th>
	</tr>	
	<% @pages.each do |page|%>
		<tr>
			<td><%=page.id%></td>
			<td><%=page.name%></td>
			<td><%=page.is_visible? ? "Да" : "Нет" %></td>
			<td><%=page.is_menu? ? "Да" : "Нет" %></td>
			<td><%=link_to "Редактировать", edit_admin_page_path(page)%> | <%= link_to 'Удалить', admin_page_path(page), :confirm => 'Удалить?', :method => :delete %></td>
		</tr>
	<% end %>
</table>
<%=link_to "Добавить", new_admin_page_path() %>
<%= will_paginate @pages %>